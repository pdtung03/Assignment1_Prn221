<Window x:Class="PRN221_Assignment1_Group3.UpdateProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Profile" Height="200" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Update Profile" FontSize="18" FontWeight="Bold" Margin="10" Grid.Row="0"/>

        <!-- Name Label and TextBox -->
        <Label Content="Name:" Margin="10" Grid.Row="1"/>
        <TextBox x:Name="txtName" Margin="10" Grid.Row="1" Grid.Column="1" Width="200"/>

        <!-- Buttons: Save and Cancel -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3">
            <Button Content="Save" Click="Save_Click" Width="100" Margin="10"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

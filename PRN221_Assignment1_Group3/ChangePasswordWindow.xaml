<Window x:Class="PRN221_Assignment1_Group3.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Current Password:" Margin="5"/>
            <PasswordBox x:Name="CurrentPasswordBox" Margin="5"/>
            <TextBlock Text="New Password:" Margin="5"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="5"/>
            <TextBlock Text="Confirm New Password:" Margin="5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="5"/>
            <Button Content="Change Password" Click="ChangePassword_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
